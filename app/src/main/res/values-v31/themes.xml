<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background to black -->
        <item name="windowSplashScreenBackground">@color/color_0B5E86</item>
        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. -->
        <!--        <item name="windowSplashScreenAnimatedIcon"></item>-->
        <!-- Set the theme of the Activity that follows your splash screen. -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/app_icon</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.MyApplication</item>
    </style>
</resources>