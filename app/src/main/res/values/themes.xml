<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_333333</item>
        <item name="android:statusBarColor">@color/color_000000</item>
        <item name="colorControlHighlight">@color/md_light_blue_100</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@color/color_FFFFFF</item>
        <item name="android:colorBackground">@color/color_FFFFFF</item>
        <item name="android:buttonStyle">@style/NanumButtonStyle</item>
        <item name="editTextStyle">@style/NanumEditTextStyle</item>
        <item name="android:radioButtonStyle">@style/NanumRadioButtonStyle</item>
        <item name="android:checkboxStyle">@style/NanumCheckboxStyle</item>
        <item name="android:textViewStyle">@style/NanumTextViewStyle</item>
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background to black -->
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. -->
        <!--        <item name="windowSplashScreenAnimatedIcon"></item>-->
        <!-- Set the theme of the Activity that follows your splash screen. -->
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.MyApplication</item>
    </style>


    <!--<item name="android:windowSplashScreenAnimatedIcon">@android:color/transparent</item>
    <item name="android:windowDisablePreview">true</item>
    <item name="android:windowIsTranslucent">true</item>-->


</resources>